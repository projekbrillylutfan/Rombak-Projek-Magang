generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  user
}

model User {
  user_id  Int      @id @default(autoincrement())
  nama     String   @db.VarChar(100)
  jabatan  String   @db.VarChar(100)
  username String   @unique @db.VarChar(100)
  password String   @db.VarChar(200)
  role     UserRole @default(user)

  @@map("users")
}

model Bupati {
  bupati_id Int      @id @default(autoincrement())
  nama      String   @db.VarChar(100)
  periode   String   @db.VarChar(100)
  agendas   Agenda[]

  @@map("bupati")
}

model Lokasi {
  id          Int      @id @default(autoincrement())
  nama_lokasi String   @db.VarChar(200)
  alamat      String   @db.VarChar(255)
  agendas     Agenda[]

  @@map("lokasi")
}

model JenisAcara {
  id          Int      @id @default(autoincrement())
  jenis_acara String   @db.VarChar(100)
  agendas     Agenda[]

  @@map("jenis_acara")
}

model Agenda {
  id             Int        @id @default(autoincrement())
  bupatiId       Int
  namaAgenda     String     @db.VarChar(100)
  deskripsi      String     @db.VarChar(255)
  lokasiId       Int
  jenisAcaraId   Int
  tanggalMulai   DateTime
  tanggalSelesai DateTime
  bupati         Bupati     @relation(fields: [bupatiId], references: [bupati_id])
  lokasi         Lokasi     @relation(fields: [lokasiId], references: [id])
  jenisAcara     JenisAcara @relation(fields: [jenisAcaraId], references: [id])
  waktu          Waktu[]

  @@index([bupatiId])
  @@index([lokasiId])
  @@index([jenisAcaraId])

  @@map("agenda")
}

model Waktu {
  id         Int      @id @default(autoincrement())
  agendaId   Int
  tanggal    DateTime
  jamMulai   DateTime
  jamSelesai DateTime
  agenda     Agenda   @relation(fields: [agendaId], references: [id])

  @@index([agendaId])

  @@map("waktu")
}
